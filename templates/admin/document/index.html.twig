{% extends 'base.html.twig' %}

{% block title %}Informatie overzicht{% endblock %}

{% block content %}
    <section class="nieuwsOverzicht">
        <div class="container text-center" >
            <div class="title">
                <div class="row justify-center-md-center">
                    <div class="col-md-12 col-lg-12 col-sm-6 ">
                        <h2>Beheer</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="nieuwsberichten">
        <div class="container" >
            <div class="row justify-center-md-center">

                <a href="{{ path('beheerNieuws') }}"><button>Nieuws</button></a>
                <a href="{{ path('beheerPartners') }}"><button>Partners</button></a>
                <a href="{{ path('beheerInformatie') }}"><button>Informatie</button></a>
                <a href="{{ path('beheerContacten') }}"><button>Contacten</button></a>
            </div>
            <div class="title beheerPortal">
                <div class="container text-center" >
                    <div class="row justify-center-md-center">
                        <div class="col-md-12 col-lg-12 col-sm-6 ">
                            <h2>Informatie</h2></div></div></div>
                </div>

            <a href="{{ path('document_new') }}"><button class="beheer">Toevoegen</button></a>
        </div>
    </section>
    <div class="fluid-container" >
        <table class="table table-striped m-auto" style="width: 90%">
        <thead>
            <tr class="d-flex">
                <th class="col-2">Naam</th>
                <th class="col-3">Omschrijving</th>
                <th class="col-2">Document</th>
                <th class="col-2">Aangemaakt</th>
                <th class="col-2">Gewijzigd</th>
                <th class="col-1"> </th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents|sort((a, b) => b.created <=> a.created) %}
            <tr class="d-flex">
                <td class="col-2"><a href="{{ path('document_show', {'id': document.id}) }}">{{ document.name }}</a></td>
                <td class="col-3" style="word-wrap: break-word">{{ document.description|raw }}</td>
                <td class="col-2">{{ document.file }}</td>
                <td class="col-2">{{ document.created ? document.created|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-2">{{ document.updated ? document.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td class="col-1">
                    <a href="{{ path('document_edit', {'id': document.id}) }}"><i class="fa fa-pencil fa-fw" aria-hidden="true">&nbsp;edit</i></a><br />
                    <a href="{{ path('document_delete', {'id': document.id}) }}" onclick="return confirm('Weet u zeker dat u dit item wilt verwijderen?');"><i class="fa fa-trash " aria-hidden="true">&nbsp;delete</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}
